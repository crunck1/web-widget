{
	"compilerOptions": {
		"sourceMap": true,
		"noEmit": false,
		"noImplicitAny": true,
		"strictNullChecks": false,
		"module": "es6",
		"jsx": "react",
		"jsxFactory": "h",
		"target": "es6",
		"allowJs": true,
		"moduleResolution": "node",
		"lib": ["dom", "es6", "scripthost", "es2015.promise"]
	},
	"include": [
		"./src/**/*"
	]
}
